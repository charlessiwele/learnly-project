    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask Run.py (Windows)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "learnly-web/learnly_web/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "python": "learnly-web/venv/Scripts/python.exe"
        },
        {
            "name": "Flask Run.py (Linux)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "learnly-web/learnly_web/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "python": "learnly-web/venv/bin/python"
        },
        {
            "name": "Django Run Server (Windows)",
            "type": "debugpy",
            "request": "launch",
            "program": "learnly-api/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            // Define the virtual environment to use
            "python": "learnly-api/venv/Scripts/python"
        },
       {
        "name": "Django Run Server (Linux)",
            "type": "debugpy",
            "request": "launch",
            "program": "learnly-api/manage.py",
            "args": [
                "runserver"
            ],
            "django": true,
            "python": "learnly-api/venv/bin/python"
        },
    ]
}